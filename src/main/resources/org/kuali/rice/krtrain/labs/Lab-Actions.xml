<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean parent="Uif-PrimaryActionButton" p:actionLabel="Save Book" p:methodToCall="saveBook"/>

    <bean parent="Uif-ActionLink" p:actionLabel="View More Rating" p:methodToCall="viewRatings"/>

    <bean id="viewAuthorBooksImg" parent="Uif-ActionImage" p:actionImage="@{#ConfigProperties['application.url']}/images/book.png"
          p:methodToCall="viewAuthorBooks"/>

    <bean parent="Uif-SecondaryActionButton" p:actionLabel="View Author Books" p:methodToCall="viewAuthorBooks">
        <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['application.url']}/images/book.png" p:align="right"/>
        </property>
    </bean>

    <bean parent="Uif-PrimaryActionButton-Small" p:actionLabel="publisher details" p:methodToCall="viewPublisher" p:actionParameters="format:detail"/>
    <bean parent="Uif-PrimaryActionButton-Small" p:actionLabel="publisher summary" p:methodToCall="viewPublisher" p:actionParameters="format:summary"/>

    <bean parent="Uif-PrimaryActionButton" p:actionLabel="Clear Form" p:actionScript="clearForm()"/>

</beans>