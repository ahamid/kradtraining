<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean parent="Uif-HorizontalBoxGroup">
        <property name="items">
            <list>
                <bean id="titleLbl" parent="Uif-Label" p:labelText="Book Title" p:labelForComponentId="title"/>

                <bean id="title" parent="Uif-InputField" p:propertyName="book.title"
                      p:fieldLabel.render="false"/>
            </list>
        </property>
    </bean>

    <bean parent="Uif-HorizontalBoxGroup">
        <property name="items">
            <list>
                <bean id="typeCodeLbl" parent="Uif-Label" p:labelText="Book Type Code" p:labelForComponentId="typeCode"/>
                <bean id="typeCode" parent="Uif-InputField" p:shortLabel="Bk Typ" p:propertyName="book.typeCode"/>
            </list>
        </property>
    </bean>

    <bean parent="Uif-HorizontalBoxGroup">
        <property name="items">
            <list>
                <bean id="isbnLbl" parent="Uif-Label" p:labelText="Book ISBN" p:labelForComponentId="isbn" p:align="right" p:renderColon="false"/>
                <bean id="isbn" parent="Uif-InputField" p:propertyName="book.isbn"/>
            </list>
        </property>
    </bean>

    <bean parent="Uif-HorizontalBoxGroup">
        <property name="items">
            <list>
                <bean id="publisherLbl" parent="Uif-Label" p:labelText="Book Publisher" p:labelForComponentId="publisher" p:align="top" p:renderColon="false"/>
                <bean id="publisher" parent="Uif-InputField" p:propertyName="book.publisher"/>
            </list>
        </property>
    </bean>



</beans>