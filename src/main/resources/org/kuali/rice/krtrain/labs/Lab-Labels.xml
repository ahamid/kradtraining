<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean parent="Uif-HorizontalBoxGroup">
        <property name="items">
            <list>
                <bean id="titleLbl" parent="Uif-Label" p:labelText="Book Title"
                      p:labelForComponentId="title"/>

                <bean id="title" parent="Uif-InputField" p:propertyName="book.title"/>
            </list>
        </property>
    </bean>

    <bean id="typeCode" parent="Uif-InputField" p:propertyName="book.typeCode"
          p:label="Book Type" p:shortLabel="Bk Typ"/>

    <bean id="isbn" parent="Uif-InputField" p:propertyName="book.isbn"
          p:label="ISBN" p:labelPlacement="RIGHT" p:fieldLabel.renderColon="false"/>

    <bean id="publisher" parent="Uif-InputField" p:propertyName="book.publisher"
          p:label="Publisher" p:labelPlacement="TOP" p:fieldLabel.renderColon="false"/>

</beans>