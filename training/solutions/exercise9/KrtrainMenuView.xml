<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="Krtrain-MenuView" parent="Uif-FormView">
        <property name="title" value="KRAD Training Menu"/>
        <property name="page">
            <bean parent="Uif-Page"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-VerticalFieldGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-MessageField" p:messageText="[b]Exercise 8[/b]" />
                            <bean parent="Uif-Link" p:linkText="Book Proposal View Menu" p:target="_self"
                                  p:href="@{#ConfigProperties['application.url']}/app/generic?viewId=Krtrain-BookEntryViewMenu&amp;methodToCall=start"/>
                            <bean parent="Uif-Link" p:linkText="Book Proposal View Tabs" p:target="_self"
                                  p:href="@{#ConfigProperties['application.url']}/app/generic?viewId=Krtrain-BookEntryViewTabs&amp;methodToCall=start"/>

                            <bean parent="Uif-MessageField" p:messageText="[b]Exercise 9[/b]" />
                            <!-- Links for exercise 9 go here -->
                            <bean parent="Uif-Link" p:linkText="Book Proposal" p:target="_self"
                                  p:href="@{#ConfigProperties['application.url']}/app/bookEntry?viewId=Krtrain-BookEntryViewMenu&amp;methodToCall=start"/>
                            <bean parent="Uif-Link" p:linkText="Book Type Lookup" p:target="_self"
                                  p:href="@{#ConfigProperties['application.url']}/kr-krad/lookup?dataObjectClassName=org.kuali.rice.krtrain.book.BookType&amp;methodToCall=search&amp;showMaintenanceLinks=true"/>
                            <bean parent="Uif-Link" p:linkText="Book Type Advanced Lookup" p:target="_self"
                                  p:href="@{#ConfigProperties['application.url']}/kr-krad/lookup?dataObjectClassName=org.kuali.rice.krtrain.book.BookType&amp;viewName=advanced&amp;methodToCall=search"/>
                            <bean parent="Uif-Link" p:linkText="Edit Book Type ROM" p:target="_self"
                                  p:href="@{#ConfigProperties['application.url']}/kr-krad/maintenance?dataObjectClassName=org.kuali.rice.krtrain.book.BookType&amp;typeCode=ROM&amp;methodToCall=maintenanceEdit"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="singlePageView" value="true"/>
        <property name="breadcrumbs.render" value="false"/>
    </bean>

</beans>